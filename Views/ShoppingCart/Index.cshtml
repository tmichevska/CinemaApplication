@model CinemaApp.Web.Models.ShoppingCartDto
@{
    ViewData["Title"] = "Index";
}

<h2>Shopping Cart</h2>

<div>
    <div class="container">
        @if (Model.ProducstInShoppingCart.Count == 0)
        {
                <h5>No products in the shopping cart</h5>
        }
        else
        {

            <div class="row">
                <a class="btn btn-warning" asp-action="OrderNow">Order now! </a>

            </div>

        <table class="table">
            <thead>
                <tr>
                    <th class="col">
                        #
                    </th>
                    <th class="col">
                    Product Name
                    </th>
                    <th class="col">
                    Quantity
                    </th>
                    <th class="col">
                    Product Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ 
                    var i = 1;
                    foreach (var item in Model.ProducstInShoppingCart)
                    {
                                <tr>
                                    <td>@(i++)</td>
                                    <td>@item.Product.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Product.Price</td>
                                    <td><a class="btn btn-danger" href="/ShoppingCart/DeleteFromShopingCart/@item.Product.ProductId">Delete</a></td>
                                </tr>
                    }

                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Total:</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th><b>@Model.TotalPrice</b></th>
                </tr>
            </tfoot>
        </table>
                    }
    </div>
</div>
